<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AssigmentDetailFragment">

    <TextView
        android:id="@+id/tIdTiket"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_work_black_24dp"/>

    <TextView
        android:id="@+id/tUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_person_black_24dp"/>

    <TextView
        android:id="@+id/tTanggal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_date_range_black_24dp"/>

    <TextView
        android:id="@+id/tKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_folder_black_24dp"/>

    <TextView
        android:id="@+id/tSubKategori"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_folder_open_black_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_label_outline_black_24dp"/>

        <TextView
            android:id="@+id/tDeskripsi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="________________________________________________________"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:text="@string/progres_ticket"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Status Progress" />

    <Spinner
        android:id="@+id/spn_progress"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:entries="@array/progress"
        android:spinnerMode="dialog"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sampai Dengan" />

    <EditText
        android:id="@+id/tTanggalTampil"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:hint="dd/mm/yyyy"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Deskripsi Progress" />

    <EditText
        android:id="@+id/tDeskripsiProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Input Deskripsi Masalah"
        android:lines="10"
        android:minLines="5"
        android:gravity="top|left"
        android:maxLines="15" />

    <!--
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_add_a_photo_black_24dp"

        android:text="Open Camera" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_photo_black_24dp"

        android:text="Open Gallery" />
    -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bCancel"
            android:text="@string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/bSubmit"
            android:text="@string/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>